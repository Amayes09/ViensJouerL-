<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             version="2.2">
    <persistence-unit name="starterPU" transaction-type="JTA">
        <jta-data-source>jdbc/starter</jta-data-source>
        
        <!-- Entités du domaine -->
        <class>com.example.domain.User</class>
        <class>com.example.domain.Event</class>
        <class>com.example.domain.Venue</class>
        <class>com.example.domain.Reservation</class>
        <class>com.example.domain.Timeslot</class>
        <class>com.example.domain.Payment</class>
        <class>com.example.domain.Notification</class>

        <properties>
            <!-- Crée les tables automatiquement au démarrage -->
            <property name="jakarta.persistence.schema-generation.database.action" value="create"/>
            <property name="jakarta.persistence.schema-generation.scripts.action" value="create"/>
            
            <!-- Configuration Hibernate (si utilisé) -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL10Dialect"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
